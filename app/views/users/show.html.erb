<h1>プロフィール</h1>
<%if @user.id == current_user.id %>
<%= link_to "ユーザー情報を編集する",      edit_user_registration_path, class: "btn btn-primary" %> <br>
<%end %>
<p></p>
<table class="table table-striped table-bordered">
  <tr><th>名前</th><td><%=@user.name %></td></tr>
  <tr><th>性別</th><td><%=@user.what_gender %></td></tr>
  <tr><th>代</th><td><%=@user.generation %></td></tr>
  <% if @user.id == current_user.id %>
  <tr><th>メール</th><td><%=@user.email  %></td></tr>
  <%end %>
</table>
<h4><%= "持ちバンド #{@user.bands.count}" %> </h4>
  <table class="table table-striped table-bordered">
    <thead >
    <tr>
      <th><%= sort_link(@q, :relationships_part, "パート") %></th>
      <th><%= sort_link(@q, :name, "バンド名") %></th>

    </tr>
    </thead>

    <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td>
          <% relationship=Relationship.find_by(band_id:band.id,user_id:@user.id) %>
          <%=relationship.part %>
        </td>
        <td><%=link_to band.name, band%> </td>
      </tr>

    <% end %>
    </tbody>
  </table>

<%= paginate @bands %>
