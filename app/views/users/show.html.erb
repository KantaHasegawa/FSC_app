<div class="emphasis">プロフィール</div>
<img src=<%= @user.image %> alt class = "icon_image">
<table class="table table-striped table-bordered">
  <tr>
    <th>名前</th>
    <td><%=@user.name %></td>
  </tr>
  <tr>
    <th>性別</th>
    <td><%=@user.what_gender %></td>
  </tr>
  <tr>
    <th>入部年(代)</th>
    <td><%="#{@user.participated_at}年(#{@user.what_generation?}代)" %></td>
  </tr>
  <tr>
    <th>パート</th>
    <td><%=@user.main_part %></td>
  </tr>
  <tr>
    <th>役職</th>
    <td><%=@user.roll %></td>
  </tr>
  <% if @user.id == current_user.id %>
    <tr>
      <th>メール</th>
      <td><%=@user.email  %></td>
    </tr>
  <%end %>
</table>

<%if @user.id == current_user.id %>
<div>  <%= link_to "ユーザー情報を編集する", edit_user_registration_path, class: "btn btn-warning user_edit_botton" %>
</div>
<%end %>

<div class="emphasis"><%= "持ちバンド #{@user.bands.count}" %></div>
<table class="table table-striped table-bordered">
  <thead >
    <tr>
      <th><%= sort_link(@q, :name, "バンド名") %></th>
      <th><%= sort_link(@q, :relationships_part, "パート") %></th>
      <th><%= sort_link(@q, :updated_at, "変更日時") %></th>
    </tr>
  </thead>
  <tbody>
    <% @bands.each do |band| %>
      <% relationship=Relationship.find_by(band_id:band.id,user_id:@user.id) %>
      <tr>
        <td>
          <img src=<%= band.image %> alt class = "icon_image">
          <%=link_to band.name, band%>
          <%if relationship.permission == false %>
            <p class="btn btn-success btn-xs" disabled="disabled">招待中</p>
            <%if current_user.id == params[:id].to_i %>
              <%=link_to "参加する","/relationships/#{relationship.id}", method: :post, class: "btn btn-primary btn-xs" %>
              <%=link_to "拒否する","/relationships/#{relationship.id}", method: :delete, class: "btn btn-danger btn-xs"  %>
            <%end %>
          <%end %>
        </td>
        <td>
          <%=relationship.part %>
        </td>
        <td><%=band.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @bands %>
