<% if @band.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h3 >
      <%= I18n.t("errors.messages.not_saved",
                 count: @band.errors.count,
                 resource: @band.class.model_name.human.downcase)
      %>
    </h3>
    <ul>
      <% @band.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
