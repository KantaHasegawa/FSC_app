
<div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="account-wall">
                <div class="chase-logo">
                  <h1 class="text-center login-title">ユーザー情報の変更</h1>
                  <p class="text-center normal-text ">必要な情報を入力してください</p>
                </div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="field">
    <%= f.label :image %><br/>
    <%= f.file_field :image %>
  </div>
  <div style="margin-top: 5px; margin-bottom: 5px">
      <%= f.radio_button :gender, 0 %>男
      <%= f.radio_button :gender, 1 %>女
  </div>


  <div class="field">
    <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "フルネームを入力してください" %>
  </div>

  <div class="field">
    <%= f.number_field :participated_at ,autofocus: true, class: "form-control", placeholder: "入部した年を入力してください" %>
  </div>

  <div class="field">
    <%= f.select :main_part,[["Vo","Vo"],["Gt","Gt"],["Ba","Ba"],["Dr","Dr"],["Key","Key"]], {}, class: "form-control"%>
  </div>

  <div class="field">
    <%= f.select :roll,[["平部員","平部員"],["平部長","平部長"],["幹事","幹事"],["会計","会計"],["渉外","渉外"],["機材","機材"],["部長","部長"],["副部長","副部長"],["次期部長","次期部長"],["次期副部長","次期副部長"]], {}, class: "form-control"%>
  </div>

  <div class="field">
    <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "メールアドレスを入力してください" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード(変更しない場合は空欄)" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "確認用パスワード(変更しない場合は空欄)" %>
  </div>




  <div class="action">
    <%= f.submit "確定する",class: "btn btn-lg btn-warning btn-block" %>
  </div>
<% end %>

  <h1 class="text-center login-title">アカウントを削除</h1>
  <p class="text-center normal-text ">アカウントの削除は慎重に行ってください</p>

 <%= button_to "アカウントを削除する",registration_path(resource_name),class: "form-control btn-danger", data: { confirm: "本当によろしいですか？" }, method: :delete %>
<p></p>
<%= link_to "戻る", :back, class: "btn btn-info" %>
</div>
</div>
