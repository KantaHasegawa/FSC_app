<div class="col-sm-6 col-md-4 col-md-offset-4">
  <div class="account-wall">
    <div class="chase-logo">
      <h1 class="text-center login-title">認証メールを再送</h1>
      <p class="text-center normal-text ">再送するメールアドレスを入力してください</p>
    </div>
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "メールアドレスを入力してください" %>
      </div>
      <div class="action">
        <%= f.submit "送信する",class: "btn btn-lg btn-warning btn-block" %>
      </div>
    <% end %>
    <div style="margin-top: 15px"><%= render "devise/shared/links" %></div>
  </div>
</div>
