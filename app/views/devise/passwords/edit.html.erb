<<div class="col-sm-6 col-md-4 col-md-offset-4">
  <div class="account-wall">
    <div class="chase-logo">
      <h1 class="text-center login-title">パスワードの変更</h1>
      <p class="text-center normal-text ">新しいパスワードを入力してください</p>
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "英数字6文字以上でパスワードを入力してください" %>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "確認用パスワードを入力してください" %>
      </div>
      <div class="action">
        <%= f.submit "パスワードを変更する",class: "btn btn-lg btn-warning btn-block" %>
      </div>
    <% end %>
    <div style="margin-top: 15px"><%= render "devise/shared/links" %></div>
  </div>
</div>
